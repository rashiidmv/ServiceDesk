<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wds.servicedesk.NewProduct"
    tools:showIn="@layout/activity_new_product"
    android:orientation="vertical">

        <LinearLayout
            android:padding="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/curved_background_accent_shape"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addproductname"
            android:hint="Brand Name"
            android:inputType="textPersonName|textCapWords"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addproductprice"
            android:hint="Unit Price"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="number"
            />
        </LinearLayout>
        <ListView
            android:id="@+id/show_products_listview"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>
